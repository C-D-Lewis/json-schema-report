{
  "name": "json-schema-report",
  "version": "1.2.0",
  "description": "Visual tool to debug JSON schema validation errors",
  "main": "src/index.js",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text-summary mocha test/unit/*",
    "start": "node src/index.js"
  },
  "bin": {
    "jsr": "src/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/C-D-Lewis/json-schema-report.git"
  },
  "keywords": [
    "json",
    "schema",
    "validation",
    "jsonschema"
  ],
  "author": "Chris Lewis",
  "license": "Apache-2.0",
  "dependencies": {
    "colors": "^1.4.0",
    "jsonschema": "^1.4.0"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "mocha": "^8.3.0",
    "nyc": "^15.1.0"
  },
  "nyc": {
    "exclude": [
      "tests/*"
    ],
    "reporter": [
      "cobertura",
      "html",
      "lcov",
      "text-summary"
    ],
    "report-dir": "./reports"
  }
}
